extends layout

block content
    link(type='text/css', rel='stylesheet', href='/Addstudent.css')

    body
      nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/') Teegoldz
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo02', aria-controls='navbarTogglerDemo02', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarTogglerDemo02.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item
              a.nav-link(href='/')
                | Home
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='/student/add') Add Student
      .container
        h2 Add Student
        .row
          .col-md-10
            if errors
              div(class="alert alert-danger") #{errors[1].msg}
        .row
          .col-md-8
            form(method="POST", action="/student/add")
              .form-group
                label(for='firstname') Firstname
                input#firstname.form-control(placeholder='Firstname', name = "firstname", type="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='lastname') Lastname
                input#lastname.form-control(placeholder='Lastname', name = "lastname", typr="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='phone') Phone number
                input#mobile.form-control(placeholder='234XXXXXXXXXX', name = "phone",type='tel', )
              .form-group
                label(for='email') Email
                input#email.form-control(placeholder='name@domain.com', name = "email", type="email")
              .form-group
                label(for='exampleFormControlSelect1') Gender
                select#exampleFormControlSelect1.form-control(name = "gender")
                  option Male
                  option Female
                  option Other

              .form-group
                
                input.form-control(type='hidden', placeholder='Readonly input hereâ€¦', readonly='', value = "https://api.adorable.io/avatars/140/abott@adorable.png", name = "img")
              .form-group
                label(for='course') Course
                select#course.form-control(name = "course")
                  option Html
                  option Javascript
                  option css
                  option python
                  option Mongodb
                  option Node.js
                  
              
              .form-group
                label(for='exampleFormControlSelect1') Level
                select#exampleFormControlSelect1.form-control(name = "level")
                  option Beginners
                  option intermediate
                  option proffessional
              
              br
              button.btn.btn-primary(type='submit') Submit
          